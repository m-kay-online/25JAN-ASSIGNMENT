/*Write a c++ program that takes a double input from the user and then converts it to an integer using a type cast, 
rounding down to the nearest integer if necessary.*/

#include <iostream>
using namespace std;

int main(){
    double d;
    int i;
    
    cout<<"Enter a double input: ";cin>>d;
    
    d = d + 0.5;
    i = d;
    
    cout<<"After Conversion: "<<i;
    
}
